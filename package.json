{
  "name": "electron-starter-react",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "main": "public/electron.js",
  "homepage": "./",
  "author": {
    "name": "William L",
    "email": "w-lindvall@outlook.com",
    "url": "https://shwilliam.com"
  },
  "build": {
    "appId": "com.shwilliam.electronStarterReact",
    "productName": "ElectronElectronApp",
    "copyright": "Copyright Â© 2020 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": ["build/**/*", "node_modules/**/*"],
    "directories": {
      "buildResources": "assets"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn react:build",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "start": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "react:build": "react-scripts build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "electron": "^8.5.2",
    "electron-builder": "^22.4.0",
    "typescript": "^3.8.3",
    "wait-on": "^4.0.1"
  }
}
